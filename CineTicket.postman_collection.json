{
  "info": {
    "name": "CineTicket - Full API Coverage",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{userToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "const url = pm.request.url ? pm.request.url.toString() : \"\";",
          "const isAuth = url.includes(\"/auth/\");",
          "const isHealth = url.includes(\"/health\");",
          "const isPublic = url.includes(\"/movies\") || url.includes(\"/shows\") || url.includes(\"/theatres\");",
          "const isAdmin = url.includes(\"/admin/\");",
          "const isBooking = url.includes(\"/bookings\");",
          "const isPayment = url.includes(\"/payments\");",
          "if (isAuth || isHealth || isPublic) {",
          "  return;",
          "}",
          "if (isAdmin) {",
          "  const adminToken = pm.environment.get(\"adminToken\");",
          "  if (!adminToken) {",
          "    throw new Error(\"adminToken not set. Run 'Auth - Login Admin' first.\");",
          "  }",
          "}",
          "if (isBooking || isPayment) {",
          "  const userToken = pm.environment.get(\"userToken\");",
          "  if (!userToken) {",
          "    throw new Error(\"userToken not set. Run 'Auth - Login User' first.\");",
          "  }",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Health - Check",
      "auth": {
        "type": "noauth"
      },
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.response.to.have.status(200);",
              "const json = pm.response.json();",
              "pm.expect(json.status).to.eql(\"ok\");"
            ]
          }
        }
      ]
    },
